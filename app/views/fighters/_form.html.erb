
  <h1>New Fighter:</h1>
<div class="container">
  <div class="mb-3">
    <%= simple_form_for(@fighter) do |f| %>
      <%= f.input :name %>
      <%= f.input :side %>
      <%= f.input :photo, as: :file %>
      <%= f.submit class: "btn btn-flat" %>
    <% end %>
  </div>

  <p ><%= link_to "Back to home", root_path, class: "btn btn-flat" %></p>
</div>
